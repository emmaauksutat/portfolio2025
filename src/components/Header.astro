---
import Logo from "./Logo.astro";
const { title, description } = Astro.props;
---
<header class="relative text-center py-16 px-8">
  <!-- Hovedboks for header -->
  <div class="relative max-w-4xl mx-auto p-8 bg-gray-900 text-white rounded-lg shadow-xl">
    <!-- Subtle paper texture or background -->

    <Logo></Logo>
    <div class="absolute inset-0 bg-cover bg-opacity-20" style="background-image: url('/path/to/subtle-paper-texture.jpg');"></div>

    <!-- Titel -->

    <!-- Beskrivelse -->
    <p class="text-lg text-gray-300 relative z-10">
      {description}
    </p>
  </div>
</header>
