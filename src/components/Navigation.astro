---
const { link, title, src } = Astro.props;
---

<div class="sticky-note p-5 relative rounded-1xl bg-yellow-100 shadow-2xl overflow-hidden hover:scale-105 transform transition">
  <!-- Pin illustration -->
 <!-- <div class="note-pin absolute top-0 left-0 bg-red-500 rounded-full w-4 h-4"></div> -->

  <a href={link} class="flex flex-col items-center space-y-4">
    <img src={src} alt={title} class="w-85 h-75 rounded-1xl mb-4 shadow-md" />
    <span class="text-2xl text-gray-900 hover:bg-yellow-200 transition">{title}</span>
  </a>
</div>